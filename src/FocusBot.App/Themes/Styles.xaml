<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Design tokens -->
    <CornerRadius x:Key="FbCornerRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="FbCornerRadiusMedium">10</CornerRadius>
    <CornerRadius x:Key="FbCornerRadiusLarge">12</CornerRadius>
    <Thickness x:Key="FbCardPadding">14</Thickness>
    <Thickness x:Key="FbColumnPadding">16</Thickness>
    <x:Double x:Key="FbAccentBarWidth">3</x:Double>

    <!-- Column container style -->
    <Style x:Key="ColumnStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbColumnBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FbColumnBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusLarge}"/>
        <Setter Property="Padding" Value="{StaticResource FbColumnPadding}"/>
        <Setter Property="MinHeight" Value="200"/>
    </Style>

    <!-- Task card style (no left padding, accent bar goes in content) -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FbCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusMedium}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Primary accent button style -->
    <Style x:Key="FbAccentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource FbAccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FbTextOnAccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusSmall}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Secondary outline button style -->
    <Style x:Key="FbOutlineButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource FbTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FbCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusSmall}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Compact button style for card actions (neutral color), larger tap target -->
    <Style x:Key="FbCardActionButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource FbTextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusSmall}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Primary card action button (e.g., Start, Done), larger and accent color -->
    <Style x:Key="FbCardPrimaryActionStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource FbAccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusSmall}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Card action button for Edit (amber) -->
    <Style x:Key="FbCardActionEditStyle" TargetType="Button" BasedOn="{StaticResource FbCardActionButtonStyle}">
        <Setter Property="Foreground" Value="{StaticResource FbEditAccentBrush}"/>
    </Style>

    <!-- Card action button for Delete (red) -->
    <Style x:Key="FbCardActionDeleteStyle" TargetType="Button" BasedOn="{StaticResource FbCardActionButtonStyle}">
        <Setter Property="Foreground" Value="{StaticResource FbDeleteAccentBrush}"/>
    </Style>

    <!-- Column header area (tinted strip with rounded top, use Background per column) -->
    <Style x:Key="FbColumnHeaderAreaStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12,12,0,0"/>
        <Setter Property="Padding" Value="0,12,0,12"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Column header text style (TO DO, IN PROGRESS, DONE) -->
    <Style x:Key="FbColumnHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="CharacterSpacing" Value="80"/>
    </Style>

    <!-- Status badge pill styles (top-left of task cards) -->
    <Style x:Key="FbStatusBadgeToDoStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbToDoAccentBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style x:Key="FbStatusBadgeInProgressStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbMisalignedAccentBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style x:Key="FbStatusBadgeCompletedStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbCompletedBadgeBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Column count badge style (used inside column header area) -->
    <Style x:Key="FbColumnCountStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <!-- Task title text style -->
    <Style x:Key="FbTaskTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- Secondary text style -->
    <Style x:Key="FbSecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <!-- Divider line style -->
    <Style x:Key="FbDividerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbCardBorderBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- Focus Status Bar container style -->
    <Style x:Key="FbFocusStatusBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FbCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FbCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource FbCornerRadiusMedium}"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinHeight" Value="72"/>
    </Style>

    <!-- Focus Status large text style (category: Unclear, Aligned, etc.) -->
    <Style x:Key="FbFocusStatusTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CharacterSpacing" Value="40"/>
    </Style>

    <!-- Focus Status reason text (e.g. "Viewing FocusBot") -->
    <Style x:Key="FbFocusStatusReasonStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- Window info text (process, window, time on window) -->
    <Style x:Key="FbWindowInfoTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- In-progress task timer (large, prominent) -->
    <Style x:Key="FbTaskTimerInProgressStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FbTextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
</ResourceDictionary>
