<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FocusBot.App.Views.KanbanBoardPage"
    x:Name="KanbanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:FocusBot.Core.Entities"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <SolidColorBrush x:Key="CardBorder" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="CardBackground" Color="#F8F8F8"/>
        <Style x:Key="ColumnStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="MinHeight" Value="200"/>
        </Style>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Page.Resources>

    <Grid Margin="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="AddTaskButton" Grid.Row="0" Content="+ Add Task" Command="{x:Bind ViewModel.ToggleAddTaskCommand}"
                Click="AddTaskButton_Click"
                HorizontalAlignment="Left" Margin="0,0,0,8"/>

        <StackPanel x:Name="AddTaskPanel" Grid.Row="1" Visibility="Collapsed" Margin="0,0,0,8">
            <TextBox Text="{x:Bind ViewModel.NewTaskDescription, Mode=TwoWay}" PlaceholderText="Description" Margin="0,0,0,4"/>
            <Button Content="Add" Command="{x:Bind ViewModel.AddTaskCommand}" HorizontalAlignment="Left"/>
        </StackPanel>

        <Grid Grid.Row="2" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource ColumnStyle}" Tag="ToDo"
                    AllowDrop="True" DragOver="Column_DragOver" Drop="Column_Drop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="To Do" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.ToDoTasks, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="entities:UserTask">
                                    <Border Style="{StaticResource CardStyle}" Tag="{x:Bind TaskId}"
                                            CanDrag="True" DragStarting="TaskCard_DragStarting">
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind Description}" TextWrapping="Wrap" MaxHeight="60"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Button Content="Start" Command="{Binding DataContext.MoveToInProgressCommand, ElementName=KanbanPage}"
                                                        CommandParameter="{Binding TaskId}" Margin="0,0,4,0"/>
                                                <Button Content="Delete" Command="{Binding DataContext.DeleteTaskCommand, ElementName=KanbanPage}"
                                                        CommandParameter="{Binding TaskId}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource ColumnStyle}" Tag="InProgress"
                    AllowDrop="True" DragOver="Column_DragOver" Drop="Column_Drop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="In Progress" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.InProgressTasks, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="entities:UserTask">
                                    <Border Style="{StaticResource CardStyle}" Tag="{x:Bind TaskId}"
                                            CanDrag="True" DragStarting="TaskCard_DragStarting">
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind Description}" TextWrapping="Wrap" FontWeight="SemiBold" MaxHeight="60"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Button Content="Done" Command="{Binding DataContext.MoveToDoneCommand, ElementName=KanbanPage}"
                                                        CommandParameter="{Binding TaskId}" Margin="0,0,4,0"/>
                                                <Button Content="Stop" Command="{Binding DataContext.MoveToToDoCommand, ElementName=KanbanPage}"
                                                        CommandParameter="{Binding TaskId}" Margin="0,0,4,0"/>
                                                <Button Content="Delete" Command="{Binding DataContext.DeleteTaskCommand, ElementName=KanbanPage}"
                                                        CommandParameter="{Binding TaskId}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource ColumnStyle}" Tag="Done"
                    AllowDrop="True" DragOver="Column_DragOver" Drop="Column_Drop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Done" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.DoneTasks, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="entities:UserTask">
                                    <Border Style="{StaticResource CardStyle}" Tag="{x:Bind TaskId}"
                                            CanDrag="True" DragStarting="TaskCard_DragStarting">
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind Description}" TextWrapping="Wrap" MaxHeight="60" Opacity="0.9"/>
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteTaskCommand, ElementName=KanbanPage}"
                                                    CommandParameter="{Binding TaskId}" HorizontalAlignment="Left" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
