<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FocusBot.App.Views.TaskDetailPage"
    x:Name="TaskDetailPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:automation="using:Microsoft.UI.Xaml.Automation"
    xmlns:viewmodels="using:FocusBot.App.ViewModels"
    mc:Ignorable="d"
    Background="{StaticResource FbPageBackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32" Spacing="24">
            <!-- Back Button -->
            <Button Style="{StaticResource FbOutlineButtonStyle}"
                    Command="{x:Bind ViewModel.BackCommand}"
                    HorizontalAlignment="Left"
                    automation:AutomationProperties.Name="Back to board">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="12"/>
                    <TextBlock Text="Back to Board" FontSize="12"/>
                </StackPanel>
            </Button>

            <!-- Task Header Card -->
            <Border Background="{StaticResource FbCardBackgroundBrush}"
                    BorderBrush="{StaticResource FbCardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource FbCornerRadiusMedium}"
                    Padding="20">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Task Description -->
                    <TextBlock Grid.Row="0"
                               Text="{x:Bind ViewModel.Description, Mode=OneWay}"
                               Style="{StaticResource FbTaskTitleStyle}"
                               FontSize="20"
                               TextWrapping="Wrap"/>

                    <!-- Task Context (if present) -->
                    <StackPanel Grid.Row="1" 
                                Spacing="4"
                                Visibility="{x:Bind ViewModel.HasContext, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Context"
                                   Style="{StaticResource FbSecondaryTextStyle}"
                                   FontSize="11"/>
                        <TextBlock Text="{x:Bind ViewModel.Context, Mode=OneWay}"
                                   Style="{StaticResource FbSecondaryTextStyle}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Task Stats -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="24">
                        <!-- Status -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Status"
                                       Style="{StaticResource FbSecondaryTextStyle}"
                                       FontSize="11"/>
                            <TextBlock Text="{x:Bind ViewModel.Status, Mode=OneWay}"
                                       Foreground="{StaticResource FbTextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Total Time -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Total Time"
                                       Style="{StaticResource FbSecondaryTextStyle}"
                                       FontSize="11"/>
                            <TextBlock Text="{x:Bind ViewModel.TotalTime, Mode=OneWay}"
                                       Foreground="{StaticResource FbTextPrimaryBrush}"
                                       FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Focus Score (if present) -->
                        <StackPanel Spacing="4"
                                    Visibility="{x:Bind ViewModel.HasFocusScore, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Focus Score"
                                       Style="{StaticResource FbSecondaryTextStyle}"
                                       FontSize="11"/>
                            <TextBlock Text="{x:Bind ViewModel.FocusScore, Mode=OneWay}"
                                       Foreground="{StaticResource FbAlignedAccentBrush}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Window Activity Section -->
            <Border Background="{StaticResource FbCardBackgroundBrush}"
                    BorderBrush="{StaticResource FbCardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource FbCornerRadiusMedium}"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Window Activity"
                               Style="{StaticResource FbColumnHeaderStyle}"
                               FontSize="14"/>

                    <!-- Activity List Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Process" Style="{StaticResource FbSecondaryTextStyle}" FontSize="11"/>
                        <TextBlock Grid.Column="1" Text="Window Title" Style="{StaticResource FbSecondaryTextStyle}" FontSize="11"/>
                        <TextBlock Grid.Column="2" Text="Time" Style="{StaticResource FbSecondaryTextStyle}" FontSize="11"/>
                        <TextBlock Grid.Column="3" Text="Align" Style="{StaticResource FbSecondaryTextStyle}" FontSize="11" HorizontalAlignment="Center"/>
                    </Grid>

                    <Border Style="{StaticResource FbDividerStyle}"/>

                    <!-- Activity List -->
                    <ItemsControl ItemsSource="{x:Bind ViewModel.WindowActivity, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:WindowActivityItem">
                                <Border Padding="0,8" BorderThickness="0,0,0,1" BorderBrush="{StaticResource FbCardBorderBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{x:Bind ProcessName}"
                                                   Style="{StaticResource FbSecondaryTextStyle}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{x:Bind WindowTitle}"
                                                   Foreground="{StaticResource FbTextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTipService.ToolTip="{x:Bind WindowTitle}"/>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{x:Bind Duration}"
                                                   Foreground="{StaticResource FbTextPrimaryBrush}"
                                                   FontFamily="Consolas"/>
                                        <TextBlock Grid.Column="3" 
                                                   Text="{x:Bind AlignmentScore}"
                                                   Foreground="{StaticResource FbTextPrimaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
